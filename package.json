{
  "name": "opensource.equinor.com",
  "version": "1.0.0",
  "scripts": {
    "dev": "eleventy --input src --serve",
    "debug": "DEBUG=Eleventy* npm run dev",
    "build": "eleventy --input src",
    "build:css": "postcss src/styles/tailwind.css -o _tmp/styles.css --watch",
    "build:css:watch": "npm run build:css -- --watch",
    "docker:build": "docker build -t equinor/oss-web .",
    "docker:start": "docker run -p 8080:80 equinor/oss-web",
    "docker:inspect": "docker run -it equinor/oss-web /bin/sh"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^9.8.6",
    "eleventy-plugin-pwa": "^1.0.8",
    "js-yaml": "^3.14.1",
    "object-path": ">=0.11.5",
    "postcss": "^7.0.35",
    "postcss-cli": "^8.3.0",
    "prettier": "^2.1.1",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
  }
}
